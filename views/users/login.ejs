<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Hayyu</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>

    <%-include('../partials/navbar.ejs')%>

    <h1 style="text-align: center">Login</h1>
    <p style="text-align: center">
      Welcome back! Please login to your account.
    </p>

    <% if (messages.length > 0) { %>
      <% messages.forEach(message => { %>
          <p class="flash-invalid"><%= message %></p>
      <% }); %>
    <% } %>

    <section class="section_container auth_container">
      <div class="form_container">
        <form id="loginForm" action="/api/v1/users/login" method="POST">
          <div class="form_group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form_group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required />
          </div>
          <button type="submit">Login</button>
          <p class="form_link">
            Don't have an account? <a href="/api/v1/users/register">Register here</a>
          </p>
        </form>
      </div>
    </section>

    <%-include('../partials/footer.ejs')%>
  </body>
</html>
