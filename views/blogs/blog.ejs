<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Hayyu</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <%-include('../partials/navbar.ejs')%>

    <section class="section_container blog_container">
        <h2 class="section_header">Latest Posts</h2>

        <div class="blog_grid">
            <% posts.forEach(post => { %>
                <div class="blog_card">
                    <img class="blog_image" src="<%= post?.image %>" alt="<%= post?.title %>">
                    <div class="blog_card_content">
                        <h3><%= post?.title %></h3>
                        <div class="blog_meta">
                            <span class="blog_author">Admin</span>
                            <span class="blog_date"><%= post?.createdAt.toLocaleDateString() %></span>
                        </div>
                        <p><%- truncatePost(post?.description) %></p>
                        <a href="/api/v1/posts/<%= post?._id %>" class="read_more">Read More</a>
                    </div>
                </div>
            <% }) %>
        </div>

    </section>

    <%-include('../partials/footer.ejs')%>
</body>
</html>

